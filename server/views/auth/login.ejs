<!-- importing header and main navigation -->
<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- main content of contact me page-->
<div class="container">
    <div class="row custom-padding">
         <!-- Message Area -->
        <% if(messages.length > 0) {%>
            <div class="alert alert-danger"><%= messages %></div>
        <% } %>

        <div class="row">
            <div class="offset-md-4 col-md-4">
                <h1>Please Login</h1>
                <form method="POST" autocomplete="off">
                    <fieldset class="form-group custom-padding-buttom">
                        <label for="username" class="form-label">Username: </label>
                        <input
                        type="text"
                        class="form-control"
                        name="username"
                        placeholder="Enter username"
                        id="username"
                        required
                        autofocus
                        />
                    </fieldset>
            
                    <fieldset class="form-group custom-padding-buttom">
                        <label for="password" class="form-label">Password: </label>
                        <input
                        type="password"
                        class="form-control"
                        name="password"
                        placeholder="Enter password"
                        id="password"
                        required
                        />
                        or
                        <a href="/register">Register Here</a>
                    </fieldset>
                    
                    <fieldset class="form-group text-right custom-padding-buttom">
                        <input type="submit" class="btn btn-primary" value="Login" />
                        <a href="/">
                        <input type="button" class="btn btn-light" value="Cancel" />
                        </a>
                    </fieldset>

                </form>
            </div>
        </div>
    </div>
</div>

<!-- importing footer -->
<%- include ../partials/footer.ejs %>